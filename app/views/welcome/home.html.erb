<div class="jumbotron" id="jumbo">
  <br/>
  <div class="header_effect">
    <h1>Haus Your Day</h1>
    <p>Home sweet home.</p>
    <br/>
    <br/>

    <div class="container">
      <input id="autocomplete" type="text" size="50" style="width: 326px; height: 34px;">
    </div>

    <br/>

    <div class="container" style="width: 365px; height: 28px;">

      <div class='input-group date' id='datetimepicker6'>
        <input type='text' class="form-control" placeholder="Check In"/>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
      <br/>

      <div class='input-group date' id='datetimepicker7'>
        <input type='text' class="form-control" placeholder="Check Out"/>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
</div>

<br/>
<script>
  function initialize() {
    var input = document.getElementById('autocomplete');
    var autocomplete = new google.maps.places.Autocomplete(input);
  }

  google.maps.event.addDomListener(window, 'load', initialize);
  $(function () {
    $('#datetimepicker6').datetimepicker({format: 'MMM DD'});
    $('#datetimepicker7').datetimepicker({useCurrent: false, format: 'MMM DD'});
    $("#datetimepicker6").on("dp.change", function (e) {
      $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
    });
    $("#datetimepicker7").on("dp.change", function (e) {
      $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
    });
  });
</script>

<div class="header_effect">
<h1>Featured Homes</h1>
<% @listing.each do |x| %>
<div class="gallery">
  <a target="_blank" href="img_fjords.jpg">
    <%= image_tag x.images[0].url%>
  </a>
  <div class="desc">
    <b>Place Type</b>
    <br />
  <%= x.place_type %>
  </div>
  <div class="desc">
    <b>Property Type</b>
    <br />
  <%= x.property_type %></div>

</div>
<%end%>
</div>
