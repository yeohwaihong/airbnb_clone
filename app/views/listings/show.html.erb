
<div id="paintings">
  <% @listing.images.each do |i| %>
    <div class="painting">
      <%= image_tag i.to_s %>
      <div class="name"></div>
      <div class="actions">

      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<br />
<br />
<%= form_for @listing, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.file_field :images, multiple: true %>
  </p>
  <p><%= f.submit %></p>
<% end %>

<p id="notice"><%= notice %></p>


