<%= simple_form_for[@listing, @booking] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :num_guests, collection: 1..10%>
    <%= f.input :start_date, as: :date, start_year: Date.today.year - 90,
                        end_year: Date.today.year - 12, discard_day: false,
                        order: [:day, :month, :year] %>
    <%= f.input :end_date, as: :date, start_year: Date.today.year - 90,
                        end_year: Date.today.year - 12, discard_day: false,
                        order: [:day, :month, :year] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
